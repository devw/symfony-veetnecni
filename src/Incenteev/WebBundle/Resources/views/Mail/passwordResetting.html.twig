{% block subject %}
{% autoescape false %}
    {{ 'resetting.email.subject'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl}, 'FOSUserBundle') }}
{% endautoescape %}
{% endblock %}

{% block body_text %}
{% autoescape false %}
    {{ 'resetting.email.message'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl}, 'FOSUserBundle') }}
{% endautoescape %}
{% endblock %}

{% block body_html %}
{% embed "WebBundle:Mail:layout.html.twig" %}

    {% block content %}
        {{ 'mail.resetting.title'|trans({'%username%': user.firstName})|markdown }}
        {{ 'mail.resetting.content_html'|trans({'%confirmationUrl%': confirmationUrl})|markdown }}
    {% endblock %}
{% endembed %}
{% endblock %}
