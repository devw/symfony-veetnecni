<!DOCTYPE html>
<html class="no-js" lang="{{ app.request.locale|slice(0, 2) }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Incenteev{% endblock %}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% if index_pages is defined and not index_pages %}
            <meta name="robots" content="noindex, nofollow">
        {% endif %}
        {% block stylesheets %}{% endblock %}
        {% block head_javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/web/vendor/js/modernizr.custom.js', 'vendors') }}"></script>
            {{ nelmio_js_error_logger() }}

            {% if google_analytics_account is not null %}
                <script type="text/javascript">
                    var _gaq = _gaq || [];
                    _gaq.push(['_setAccount', '{{ google_analytics_account|e('js') }}']);
                    _gaq.push(['_trackPageview']);

                    (function () {
                        var ga = document.createElement('script');
                        ga.type = 'text/javascript';
                        ga.async = true;
                        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                        var s = document.getElementsByTagName('script')[0];
                        s.parentNode.insertBefore(ga, s);
                    })();
                </script>
            {% endif %}
        {% endblock %}
        {# Favicon and touch icons #}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('apple-touch-icon-144.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('apple-touch-icon-114.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('apple-touch-icon-72.png') }}">
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
    </head>
    <body class="{% block body_background_position '' %} {% block body_background_repeat '' %}">
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% javascripts
                'bundles/web/vendor/js/jquery-1.8.3.min.js'
                'bundles/web/vendor/js/jquery.autosize.js'
                'bundles/web/vendor/js/jquery.expander.min.js'
                'bundles/web/vendor/js/a-tools.js'
                'bundles/web/vendor/js/jquery-ui-1.9.2.custom.min.js'
                'bundles/web/vendor/js/jquery.ui.touch-punch.min.js'
                'bundles/web/vendor/js/jquery.handsontable.js'
                'bundles/web/vendor/js/jquery.pjax.min.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-transition.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-alert.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-button.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-carousel.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-collapse.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-dropdown.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-tab.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-typeahead.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-tooltip.js'
                'bundles/web/vendor/js/bootstrap/bootstrap-popover.js'
                'bundles/web/vendor/js/datepicker/bootstrap-datepicker.js'
                'bundles/web/vendor/js/datepicker/bootstrap-datepicker.fr.js'
                'bundles/web/vendor/js/bootstrap-colorpicker.js'
                'bundles/web/vendor/js/Placeholders.min.js'
                'bundles/web/vendor/js/underscore-min.js'
                'bundles/web/vendor/js/chosen.jquery.min.js'
                'bundles/bazingaexposetranslation/js/translator.min.js'
                'bundles/web/vendor/js/humane.min.js'
                'bundles/web/vendor/js/countdown/jquery.countdown.min.js'
                'bundles/web/vendor/js/timeago/jquery.timeago.js'
                'bundles/web/vendor/js/moment/moment.min.js'
                'bundles/web/vendor/js/moment/lang/fr.js'
                'bundles/web/vendor/js/marked.js'
                'bundles/web/vendor/js/mdmagick.js'
                package='vendors'
                combine=true
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% javascripts
                'bundles/web/js/main.js'
                'bundles/web/js/forms.js'
                'bundles/web/js/notification.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
