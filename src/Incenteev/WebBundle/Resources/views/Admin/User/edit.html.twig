{% extends 'WebBundle:Admin:layout.html.twig' %}

{% block title %}
    {{ 'admin.breadcrumb.users.edition'|trans }}
    - {{ 'admin.breadcrumb.users.display'|trans({'%user_name%': user.name}) }}
    - {{ 'admin.breadcrumb.users.main'|trans }}
    - {{ 'admin.breadcrumb.organization_management'|trans }}
    - Incenteev
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('admin_home') }}">{{ 'admin.breadcrumb.organization_management'|trans }}</a>
            <span class="divider">></span>
        </li>
        <li>
            <a href="{{ path('admin_user_list') }}">{{ 'admin.breadcrumb.users.main'|trans }}</a>
            <span class="divider">></span>
        </li>
        <li>
            <a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ 'admin.breadcrumb.users.display'|trans({'%user_name%': user.name}) }}</a>
            <span class="divider">></span>
        </li>
        <li class="active">{{ 'admin.breadcrumb.users.edition'|trans }}</li>
    </ul>
{% endblock %}

{% block inner_content %}
    <h1 class="block-app-title">
        {{ 'user.title.admin_edit'|trans }}
    </h1>

    <form action="{{ path('admin_user_edit', {'id': user.id}) }}" method="post" {{ form_enctype(form) }} class="form form-app">
        {% form_theme form _self %}

        {{ form_widget(form) }}

        <div class="form-app-actions">
            <ul class="form-app-actions-list list list-actions">
                <li>
                    <button type="submit" data-loading-text="{{ 'layout.messages.loading'|trans }}" class="btn button-submit button-main">
                        {{ 'form.action.save'|trans }}
                    </button>
                </li>
            </ul>
        </div>
    </form>
{% endblock %}

{% block _incenteev_admin_user_remove_avatar_row %}
    <div class="controls">
        <span class="form-app-avatar">
            <img src="{{ get_avatar(form.parent.vars.data) }}" class="app-avatar">
            <span class="app-avatar-action">
                {{ form_widget(form) }}
                {{ 'user.label.current_avatar'|trans }}
            </span>
        </span>
    </div>
{% endblock %}
